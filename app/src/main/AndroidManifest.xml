<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.telphone.zy.windowinfo" >

    <!-- 显示 系统级别 悬浮窗的 权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name=".WindowActivity"
            android:label="@string/title_activity_window" >
        </activity>
        <activity
            android:name=".InputActivity"
            android:label="@string/title_activity_input"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" >
        </activity>
        <activity
            android:name=".AdjustActivity"
            android:label="@string/title_activity_adjust"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".DiaLogStyleActivity"
            android:label="@string/title_activity_dia_log_style"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name=".Home1Activity"
            android:label="@string/title_activity_home1" >
          
        </activity>
        <activity
            android:name=".HomeTest1Activity"
            android:label="@string/title_activity_home_test1"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
         
        </activity>
    </application>

</manifest>
