<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="300dp"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.telphone.zy.windowinfo.DiaLogStyleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入密码"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/dialog_edit0"
            style="@style/MyPasswordEdit"
            />

        <EditText
            android:id="@+id/dialog_edit1"
            style="@style/MyPasswordEdit"
            />

        <EditText
            android:id="@+id/dialog_edit2"
            style="@style/MyPasswordEdit"
            />

        <EditText
            android:id="@+id/dialog_edit3"
            style="@style/MyPasswordEdit"
            />

        <EditText
            android:id="@+id/dialog_edit4"
            style="@style/MyPasswordEdit"
            />

        <EditText
            android:id="@+id/dialog_edit5"
            style="@style/MyPasswordEdit"
            />


    </LinearLayout>

</LinearLayout>
